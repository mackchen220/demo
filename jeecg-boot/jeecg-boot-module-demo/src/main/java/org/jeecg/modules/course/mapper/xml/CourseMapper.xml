  <select id="findListByUserId" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"/>
    from tb_course
    where
      del_flag = 1
      <if test="userId != null and userId != ''">
        and create_by = #{userId}
      </if>
  </select>

  <select id="getListOrderByLikeNum" resultMap="UserCourseVoResultMap">
    select a.*,IFNULL(d.star,0) as star_status,IFNULL(d.good,0) as good_status ,2 as course_type1 ,b.nick_name,b.head_image ,a.course_type as type1
    from tb_course 	as a
    LEFT JOIN tb_user_star d on d.community_id =a.id and d.user_id = #{userId}
    LEFT JOIN tb_user as b on a.user_id =b.id
    where a.del_flag = 0
    <if test="courseType != null">
      and a.course_type = #{courseType}
    </if>
    <if test="city != null and city != ''">
      and a.city = #{city}
    </if>
    order by a.good_num desc
  </select>

  <select id="searchListOrderByType" resultMap="UserCourseVoResultMap">
    select a.*,IFNULL(d.star,0) as star_status,IFNULL(d.good,0) as good_status ,2 as course_type1 ,b.nick_name,b.head_image ,a.course_type as type
    from tb_course 	as a
    LEFT JOIN tb_user_star d on d.community_id =a.id and d.user_id = #{userId}
    LEFT JOIN tb_user as b on a.user_id =b.id
    where a.del_flag = 0
    <if test="search != null and search != ''">
      and a.title like concat('%', #{search}, '%')
    </if>
    <if test="type == 1">
      order by a.good_num desc
    </if>
    <if test="type == 2">
      order by a.watch_num desc
    </if>
    <if test="type == 3">
      order by a.create_time desc
    </if>
  </select>

